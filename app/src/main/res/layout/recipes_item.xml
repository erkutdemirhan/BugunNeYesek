<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipes_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:animateLayoutChanges="true"
    card_view:cardBackgroundColor="@color/text_icons"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipe_title"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/recipe_picture"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/recipe_image" />

        <TextView
            android:id="@+id/recipe_ingredients_title"
            android:text="@string/recipe_ingredients_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/available_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="10sp"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/unavailable_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="10sp"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>

</android.support.v7.widget.CardView>