<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android           = "http://schemas.android.com/apk/res/android"
    xmlns:card_view         = "http://schemas.android.com/apk/res-auto"
    android:id              = "@+id/recipeitem_cardview"
    android:layout_width    = "match_parent"
    android:layout_height   = "wrap_content"
    android:layout_margin   = "@dimen/recipelist_margin"
    card_view:cardElevation = "@dimen/elevation" >

    <RelativeLayout
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content" >

        <com.erkutdemirhan.bugunneyesek.customview.SquareImageView
            android:id            = "@+id/recipeitem_image"
            android:layout_width  = "match_parent"
            android:layout_height = "wrap_content"
            android:scaleType     = "centerCrop" />

        <TextView
            android:layout_width   = "match_parent"
            android:layout_height  = "wrap_content"
            android:id             = "@+id/recipeitem_name"
            android:gravity        = "center_vertical"
            android:alpha          = "0.6"
            android:background     = "@color/alpha_black"
            android:textSize       = "15sp"
            android:padding        = "10dp"
            android:textColor      = "@android:color/white"
            android:layout_alignParentBottom = "true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
