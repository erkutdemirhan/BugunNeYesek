<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width  = "match_parent"
    android:layout_height = "match_parent" >

    <android.support.design.widget.TextInputLayout
        android:id = "@+id/select_ingredients_textinput"
        android:layout_width   = "match_parent"
        android:layout_height  = "wrap_content"
        android:layout_margin  = "20dp"
        android:layout_gravity = "center_vertical">
        <AutoCompleteTextView
            android:id            = "@+id/select_ingredients_autocomplete"
            android:layout_width  = "match_parent"
            android:layout_height = "wrap_content"
            android:inputType     = "text"
            android:singleLine    = "true"
            android:hint          = "Elinizdeki Malzemeleri Girin" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.RecyclerView
        android:id             = "@+id/select_ingredients_recyclerview"
        android:layout_width   = "match_parent"
        android:layout_height  = "wrap_content"
        android:layout_below   = "@id/select_ingredients_textinput"
        android:scrollbars     = "vertical" />
</RelativeLayout>